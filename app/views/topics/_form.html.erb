<%= form_for([@forum, @forum.topics.build]) do |f| %>
	<% render 'shared/errors', object: f.object %>
	<%= f.label :title %>
	<%= f.text_field :title, class: "form-control" %>
	<%= f.label :description %>
	<%= f.text_area :description, class: "form-control" %>
	<br />
	<%= f.submit "Create Topic", class: "btn btn-default" %>
<% end %>