<div class="micropost_form">
	<%= form_for(@micropost, remote: true) do |f| %>
		<%= render 'shared/errors', object: f.object %>
		<div class="field">
			<%= f.text_area :content, placeholder: "Post a comment", class: "form-control" %>
		</div>
		<%= f.submit "Post", class: "btn btn-default" %>
	<% end %>
</div>
