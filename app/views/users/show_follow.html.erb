<%= provide(:title, @title) %>
<div class="row">
	<aside class="col-md-4">
		<div class="panel panel-default">
			<div class="panel-body">
				<section class="user_info">
					<%= gravatar_for @user %>
					<h2><%= @user.username %></h2>
					<span><%= link_to "View Profile", @user %></span>
					<span><p><%= pluralize(@user.microposts.count, "Posts") %></p></span>
				</section>
				<section class="stats">
					<%= render 'shared/stats' %>
					<% if @users.any? %>
						<div class="user_avatars">
							<% @users.each do |user| %>
								<%= link_to gravatar_for(user, size: 30), user %>
							<% end %>
						</div>
					<% end %>
				</section>
			</div>
		</div>
	</aside>
	<div class="col-md-8">
		<div class="panel panel-default">
			<div class="panel-body followers">
				<h3><%= @title %></h3>
				<% if @users.any? %>
					<ul>
						<h3><%= render @users %></h3>
					</ul>
				<% end %>
			</div>
		</div>
	</div>
</div>