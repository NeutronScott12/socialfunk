<% provide(:title, @user) %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h2>	
				<%# gravatar_for @user %>
				<%= @user.username %>
			</h2>
		</section>
	</aside>
	<div class="col-md-8">
		<% if @user.microposts.any? %>
			<h3><% pluralize(@user.microposts.count, "Post") %></h3>
			<ol class="microposts">
				<%= render 'shared/micropost' %>
			</ol>
		<% end %>
	</div>
</div>
