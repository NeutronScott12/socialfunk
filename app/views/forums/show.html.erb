<h2><%= @forum.title %></h2>
<% if logged_in? %>
	<input type="button" value="Create Topic" id="create_topic", class="btn btn-default">
<% end %>
<br />

<div class="topic">
	<div class="row">
		<div class="container col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-body">
					<%= render 'topics/form' %>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="topics">
	<div class="row">
		<div class="container-fluid col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-body">
					<%= render @forum.topics %>
				</div>
			</div>
		</div>
	</div>
</div>


