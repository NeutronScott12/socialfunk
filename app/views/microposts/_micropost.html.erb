<ul class="micropost">
  <li id="micropost-<%= micropost.id %>">
    <%# link_to gravatar_for(micropost.user, size: 50), micropost.user %>
    <span class="user"><%= link_to micropost.user.username, micropost.user %></span>
    <span class="content">
      <p><%= micropost.content %></p>
      <%# image_tag micropost.picture.url if micropost.picture? %>
    </span>
    <span class="timestamp">
      <p class="time">Posted <%= time_ago_in_words(micropost.created_at).gsub('about','') %> ago.</p>
      <p class="comment_ammount">Comments <%= micropost.comments.count %></p>
      <% if current_user?(micropost.user) %>
        <span class="post_link">
          <p><%= link_to micropost, method: :delete, data: {confirm: "Are you sure?"} do %>
                <i class="glyphicon glyphicon-remove"></i>
          <% end %>
      <% end %>
              <a href="<%= micropost_path(micropost) %>"> <i class="glyphicon glyphicon-pencil"></i></a></p>
        </span>
    </span>
  </li>
</ul>




